<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Edit Order #<%= order.id %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('../partials/navbar', { user: user }) %>

  <main class="container page-shell py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <div class="text-muted small">Order ID</div>
        <h3 class="mb-0">#<%= order.id %></h3>
        <div class="text-muted small">Placed: <%= new Date(order.created_at).toLocaleString() %></div>
        <div class="text-muted small">Current Total: $<%= Number(order.total).toFixed(2) %></div>
      </div>
      <div>
        <a class="btn btn-outline-secondary" href="/admin/analytics">Back to Analytics</a>
      </div>
    </div>

    <% if (messages && messages.error && messages.error.length) { %>
      <div class="alert alert-danger"><%= messages.error[0] %></div>
    <% } %>
    <% if (messages && messages.success && messages.success.length) { %>
      <div class="alert alert-success"><%= messages.success[0] %></div>
    <% } %>

    <form method="POST" action="/admin/orders/<%= order.id %>/edit">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Order Items</h5>
          <small class="text-muted">Edit quantity or unit price; subtotal recalculates on save.</small>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-striped align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th style="width:90px">Item ID</th>
                  <th>Product</th>
                  <th style="width:120px">Quantity</th>
                  <th style="width:140px">Unit Price</th>
                  <th style="width:120px">Subtotal</th>
                </tr>
              </thead>
              <tbody>
                <% items.forEach(it => { %>
                  <tr>
                    <td>
                      <%= it.id %>
                      <input type="hidden" name="itemId" value="<%= it.id %>">
                    </td>
                    <td><%= it.productName %> (#<%= it.productId %>)</td>
                    <td>
                      <input type="number" name="quantity" min="1" step="1" class="form-control form-control-sm" value="<%= it.quantity %>" required>
                    </td>
                    <td>
                      <input type="number" name="unitPrice" min="0" step="0.01" class="form-control form-control-sm" value="<%= Number(it.unit_price_after_discount).toFixed(2) %>" required>
                    </td>
                    <td>$<%= Number(it.subtotal).toFixed(2) %></td>
                  </tr>
                <% }) %>
                <% if (!items.length) { %>
                  <tr><td colspan="5" class="text-center text-muted">No items for this order.</td></tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="card-footer text-end">
          <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
      </div>
    </form>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
