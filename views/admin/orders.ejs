<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Admin Orders</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('../partials/navbar', { user: user }) %>

  <section class="sa-hero">
    <div class="container">
      <div class="eyebrow">Admin</div>
      <h1>Complete order history.</h1>
      <p>Browse every order and export the full summary in one click.</p>
    </div>
  </section>

  <main class="container page-shell">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-3 gap-2">
      <h3 class="mb-0">All Orders</h3>
      <div class="d-flex gap-2">
        <a class="btn btn-outline-primary btn-sm" href="/admin/analytics">Back to analytics</a>
        <a class="btn btn-primary btn-sm" href="/admin/orders/export">Download order summary</a>
      </div>
    </div>

    <% if (messages && messages.error && messages.error.length) { %>
      <div class="alert alert-danger"><%= messages.error[0] %></div>
    <% } %>
    <% if (messages && messages.success && messages.success.length) { %>
      <div class="alert alert-success"><%= messages.success[0] %></div>
    <% } %>

    <% if (!orders || orders.length === 0) { %>
      <div class="alert alert-info">No orders have been placed yet.</div>
    <% } else { %>
      <% orders.forEach(order => { %>
        <div class="card mb-3">
          <div class="card-header d-flex flex-wrap justify-content-between align-items-center gap-2">
            <div>
              <div class="fw-bold">Order #<%= order.id %></div>
              <div class="text-muted small">Placed: <%= new Date(order.created_at).toLocaleString() %></div>
            </div>
            <div class="text-end">
              <div class="fw-semibold"><%= order.username || 'Unknown user' %> <% if (order.email) { %>(<%= order.email %>)<% } %></div>
              <div class="text-muted small">User ID: <%= order.userId || 'N/A' %></div>
            </div>
            <div class="fw-bold text-primary">Total: $<%= Number(order.total).toFixed(2) %></div>
          </div>
          <% if (order.is_test) { %>
            <div class="card-body border-top">
              <span class="badge bg-secondary">Test order (admin)</span>
            </div>
          <% } %>
          <% const paypalTxn = (typeof paypalMap !== 'undefined' && paypalMap && paypalMap.get) ? paypalMap.get(String(order.id)) : null; %>
          <% const netsTxn = (typeof netsMap !== 'undefined' && netsMap && netsMap.get) ? netsMap.get(String(order.id)) : null; %>
          <% const refundReq = (typeof refundMap !== 'undefined' && refundMap && refundMap.get) ? refundMap.get(String(order.id)) : null; %>
          <% if (paypalTxn) { %>
            <div class="card-body border-top d-flex flex-wrap justify-content-between align-items-center gap-2">
              <div>
                <span class="badge bg-info text-dark me-2">PayPal</span>
                <span class="small text-muted">Status: <%= paypalTxn.status %></span>
                <% if (paypalTxn.refund_status && paypalTxn.refund_status !== 'none') { %>
                  <span class="small text-muted ms-2">Refund: <%= paypalTxn.refund_status %></span>
                <% } %>
              </div>
              <% if (paypalTxn.refund_status === 'none' || !paypalTxn.refund_status) { %>
                <form action="/admin/orders/<%= order.id %>/refund/paypal" method="POST" class="m-0">
                  <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Refund this PayPal payment?');">Refund PayPal</button>
                </form>
              <% } %>
            </div>
          <% } else if (netsTxn) { %>
            <div class="card-body border-top d-flex flex-wrap justify-content-between align-items-center gap-2">
              <div>
                <span class="badge bg-warning text-dark me-2">NETS QR</span>
                <span class="small text-muted">Status: <%= netsTxn.status %></span>
              </div>
              <% if (netsTxn.status !== 'refunded_wallet') { %>
                <form action="/admin/orders/<%= order.id %>/refund/wallet" method="POST" class="m-0">
                  <button type="submit" class="btn btn-sm btn-outline-warning" onclick="return confirm('Refund to wallet?');">Refund to Wallet</button>
                </form>
              <% } %>
            </div>
          <% } %>
          <% if (refundReq) { %>
            <div class="card-body border-top">
              <div class="small text-muted mb-2">
                Refund request: <strong><%= refundReq.status %></strong>
                <% if (refundReq.reason) { %> â€” <%= refundReq.reason %><% } %>
              </div>
              <% if (refundReq.status === 'pending') { %>
                <div class="d-flex flex-wrap gap-2">
                  <form action="/admin/orders/<%= order.id %>/refund/request/approve" method="POST" class="m-0">
                    <button type="submit" class="btn btn-sm btn-primary">Approve</button>
                  </form>
                  <form action="/admin/orders/<%= order.id %>/refund/request/reject" method="POST" class="m-0 d-flex gap-2">
                    <input type="text" name="admin_message" class="form-control form-control-sm" placeholder="Rejection reason">
                    <button type="submit" class="btn btn-sm btn-outline-danger">Reject</button>
                  </form>
                </div>
              <% } else { %>
                <% if (refundReq.admin_message) { %>
                  <div class="small text-muted mt-2">Admin note: <%= refundReq.admin_message %></div>
                <% } %>
              <% } %>
            </div>
          <% } %>
          <div class="card-body p-0">
            <table class="table mb-0">
              <thead>
                <tr>
                  <th style="width:90px">Item ID</th>
                  <th>Product</th>
                  <th style="width:90px">Qty</th>
                  <th style="width:120px">Unit (after)</th>
                  <th style="width:120px">Subtotal</th>
                  <th style="width:160px">Base / Discount</th>
                </tr>
              </thead>
              <tbody>
                <% if (!order.items || order.items.length === 0) { %>
                  <tr><td colspan="6" class="text-center text-muted">No items recorded for this order.</td></tr>
                <% } else { %>
                  <% order.items.forEach(it => { %>
                    <tr>
                      <td><%= it.id %></td>
                      <td><%= it.productName %> (#<%= it.productId %>)</td>
                      <td><%= it.quantity %></td>
                      <td>$<%= Number(it.unit_price_after_discount).toFixed(2) %></td>
                      <td>$<%= Number(it.subtotal).toFixed(2) %></td>
                      <td>$<%= Number(it.base_price).toFixed(2) %> / <%= Number(it.discount_rate).toFixed(2) %>%</td>
                    </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      <% }) %>
    <% } %>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
