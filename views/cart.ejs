<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('partials/navbar', { user: user }) %>

  <section class="sa-hero">
    <div class="container">
      <div class="eyebrow">Manage cart</div>
      <h1>Your cart, ready for checkout.</h1>
      <p>Review your picks, adjust quantities, and glide into checkout with a polished supermarket experience.</p>
      <div class="hero-actions">
        <a href="/checkout" class="btn btn-primary">Proceed to checkout</a>
        <a href="/shopping" class="btn btn-outline-primary">Continue shopping</a>
      </div>
    </div>
  </section>

  <main class="container page-shell">
    <div class="section-title">
      <h3 class="mb-0">Your Cart</h3>
      <div class="pill-tag">Total: $<%= total ? Number(total).toFixed(2) : '0.00' %></div>
    </div>

    <% if (!cartItems || cartItems.length === 0) { %>
      <div class="alert alert-info">Your cart is empty.</div>
    <% } else { %>
      <div class="hero-card mb-3">
        <div>
          <h5 class="mb-1 text-white">All set?</h5>
          <p class="mb-0 muted-text">Lock in your cart to secure prices before they change.</p>
        </div>
      </div>

      <div class="table-card">
        <table class="table table-striped align-middle mb-0">
          <thead>
            <tr>
              <th>Product</th>
              <th>Image</th>
              <th style="width:140px">Qty</th>
              <th>Price</th>
              <th>Subtotal</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% cartItems.forEach(item => { %>
              <tr>
                <td><%= item.name %></td>
                <td>
                  <img src="<%= item.image ? ('/images/' + item.image) : '/images/default.png' %>" style="max-width:80px" alt="<%= item.name %>">
                </td>
                <td>
                  <form action="/cart/update/<%= item.id %>" method="POST" class="d-flex">
                    <input type="number" name="quantity" value="<%= item.quantity %>" min="1" class="form-control form-control-sm me-2" style="width:80px">
                    <button type="submit" class="btn btn-sm btn-outline-primary">Update</button>
                  </form>
                </td>
                <td>$<%= Number(item.price).toFixed(2) %></td>
                <td>$<%= Number(item.subtotal).toFixed(2) %></td>
                <td>
                  <form action="/cart/delete/<%= item.id %>" method="POST" onsubmit="return confirm('Remove this item from cart?')">
                    <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
          <tfoot>
            <tr>
              <th colspan="4" class="text-end">Total</th>
              <th colspan="2">$<%= total ? Number(total).toFixed(2) : '0.00' %></th>
            </tr>
          </tfoot>
        </table>
      </div>
    <% } %>
  </main>
</body>
</html>
