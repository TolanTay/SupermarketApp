<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Checkout</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('partials/navbar', { user: user }) %>

  <section class="sa-hero sa-hero--compact">
    <div class="container"></div>
  </section>

  <main class="container page-shell page-shell--tight">
    <div class="section-title section-title--compact">
      <h2>Checkout</h2>
    </div>

    <% if (messages && messages.error && messages.error.length) { %>
      <div class="alert alert-danger"><%= messages.error[0] %></div>
    <% } %>
    <% if (messages && messages.success && messages.success.length) { %>
      <div class="alert alert-success"><%= messages.success[0] %></div>
    <% } %>

    <% if (!cartItems || cartItems.length === 0) { %>
      <div class="alert alert-info">Your cart is empty.</div>
      <a href="/shopping" class="btn btn-primary">Continue Shopping</a>
    <% } else { %>
      <div class="checkout-layout">
        <section class="checkout-left">
          <div class="table-card checkout-summary">
            <div class="checkout-summary__header">
              <div>
                <div class="summary-title">Order summary</div>
                <div class="summary-sub">Review items before payment.</div>
              </div>
              <div class="summary-total">Total <span>$<%= total.toFixed(2) %></span></div>
            </div>
            <table class="table mb-0">
              <thead>
                <tr><th>Product</th><th>Qty</th><th>Price</th><th>Subtotal</th></tr>
              </thead>
              <tbody>
                <% cartItems.forEach(item => { %>
                  <tr>
                    <td><%= item.name %></td>
                    <td><%= item.quantity ?? item.qty %></td>
                    <td>$<%= item.price.toFixed(2) %></td>
                    <td>$<%= item.subtotal.toFixed(2) %></td>
                  </tr>
                <% }) %>
              </tbody>
              <tfoot>
                <tr>
                  <th colspan="3" class="text-end">Total</th>
                  <th>$<%= total.toFixed(2) %></th>
                </tr>
              </tfoot>
            </table>
          </div>
        </section>

        <aside class="checkout-right">
          <% const pinReq = Number(total || 0) >= 50; %>
          <div class="payment-stack payment-stack--tight">
            <div class="payment-card payment-card--compact">
              <form id="confirm-form" action="/checkout/confirm" method="POST">
                <button id="confirm-btn" class="payment-cta payment-cta--nets payment-cta--equal">NETS QR</button>
              </form>
            </div>

            <div class="payment-card payment-card--compact">
              <div id="paypal-status" class="payment-note mb-2" style="display:none;"></div>
              <div class="paypal-shell paypal-shell--flat">
                <div id="paypal-button-container"></div>
              </div>
            </div>

            <div class="payment-card payment-card--compact">
              <% if (process.env.STRIPE_SECRET_KEY) { %>
                <form action="/stripe/create-session" method="POST">
                  <button type="submit" class="payment-cta payment-cta--stripe payment-cta--equal">Stripe</button>
                </form>
              <% } else { %>
                <div class="small text-muted">Stripe not configured.</div>
              <% } %>
            </div>

            <div class="payment-card payment-card--compact">
              <div class="payment-label">Wallet</div>
              <div class="payment-note mb-2">Balance: $<%= Number(walletBalance || 0).toFixed(2) %></div>
              <form action="/checkout/wallet" method="POST" class="wallet-form wallet-form--stack">
                <input type="password" name="wallet_pin" maxlength="4" pattern="[0-9]{4}" inputmode="numeric" class="form-control form-control-sm" placeholder="Wallet PIN" <%= pinReq ? 'required' : '' %>>
                <button type="submit" class="payment-cta payment-cta--wallet payment-cta--rect">Wallet</button>
                <a href="/wallet" class="btn btn-link p-0">Top up</a>
              </form>
            </div>

            <div class="payment-warnings">
              <div class="warning-line">Refunds for NETS purchases will be credited to your wallet.</div>
              <% if (pinReq) { %>
                <div class="warning-line">Wallet PIN required for payments of $50 or more.</div>
              <% } %>
            </div>
          </div>
        </aside>
      </div>
    <% } %>
  </main>

  <div class="checkout-actions">
    <a class="btn btn-outline-primary btn-sm" href="/shopping">Keep shopping</a>
    <a class="btn btn-outline-primary btn-sm" href="/cart">Back to cart</a>
  </div>

  <% if (cartItems && cartItems.length) { %>
    <% if (process.env.PAYPAL_CLIENT_ID) { %>
      <script src="https://www.paypal.com/sdk/js?client-id=<%= process.env.PAYPAL_CLIENT_ID %>&currency=SGD&intent=capture&commit=true&disable-funding=card"></script>
      <script>
        (function () {
          const paypalContainer = document.getElementById('paypal-button-container');
          if (!paypalContainer || typeof paypal === 'undefined') return;
          const statusEl = document.getElementById('paypal-status');
          const showStatus = (msg) => {
            if (!statusEl) return;
            statusEl.style.display = 'block';
            statusEl.textContent = msg;
          };

          paypal.Buttons({
            style: {
              layout: 'horizontal',
              shape: 'rect',
              height: 32,
              tagline: false,
              label: 'paypal',
              color: 'gold'
            },
            createOrder: function () {
              return fetch('/api/paypal/create-order', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({})
            }).then((res) => res.json()).then((data) => data.id);
          },
          onApprove: function (data) {
            return fetch('/api/paypal/capture-order', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ orderID: data.orderID })
            }).then((res) => res.json()).then((details) => {
                if (details && details.success) {
                  window.location.href = '/history';
                } else {
                  showStatus('Payment not completed. Please try again.');
                }
              });
          },
          onCancel: function () {
            showStatus('Payment canceled. Please try again.');
          },
          onError: function () {
            showStatus('Payment failed. Please try again.');
          },
          onClick: function (data, actions) {
            if (!<%= cartItems && cartItems.length ? 'true' : 'false' %>) {
              alert('Your cart is empty.');
              return actions.reject();
            }
            return actions.resolve();
          }
          }).render('#paypal-button-container');
        })();
      </script>
    <% } else { %>
      <script>
        document.getElementById('paypal-button-container').innerText = 'PayPal not configured.';
      </script>
    <% } %>
  <% } %>
</body>
</html>
