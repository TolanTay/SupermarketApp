<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Supermarket App</title>
</head>
<body>
    <%- include('partials/navbar', { user: user }) %>

    <section class="sa-hero">
      <div class="container">
        <div class="eyebrow">Product details</div>
        <h1>Explore this item in detail.</h1>
        <p>Pricing, stock, and imagery presented with a clean supermarket feel.</p>
      </div>
    </section>

    <main class="container page-shell">
        <% if (product) { %>
            <div class="row g-4 align-items-start">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body text-center">
                            <img src="/images/<%= product.image %>" alt="<%= product.productName %>" class="img-fluid rounded">
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <p class="mb-2 text-muted">Product Name</p>
                            <h3 class="mb-3"><%= product.productName %></h3>
                            <div class="d-flex align-items-center gap-3 mb-3">
                              <% if (disc > 0) { %>
                                <span class="price-old">$<%= priceNum.toFixed(2) %></span>
                                <span class="fs-4 text-success">$<%= discounted %> (<%= disc %>% off)</span>
                              <% } else { %>
                                <span class="fs-4 fw-bold">$<%= priceNum.toFixed(2) %></span>
                              <% } %>
                            </div>
                            <div class="mb-3">Stock: <strong><%= product.quantity %></strong></div>
                            <form action="/add-to-cart/<%= product.id %>" method="POST" class="mt-3">
                              <div class="input-group" style="max-width:220px;">
                                <input type="number" name="quantity" value="1" min="1" class="form-control form-control-sm">
                                <button class="btn btn-sm btn-primary" type="submit">Add to cart</button>
                              </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="alert alert-info">No product found.</div>
        <% } %>

        <div class="mt-3">
          <a href="/shopping" class="btn btn-outline-primary">Back to shopping</a>
        </div>
    </main>
    
</body>
</html>
