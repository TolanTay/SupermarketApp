<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('partials/navbar', { user: user }) %>

  <section class="sa-hero">
    <div class="container">
      <div class="eyebrow">Profile</div>
      <h1>Manage your account.</h1>
      <p>Update your details, change your password, and (optionally) add a profile picture.</p>
    </div>
  </section>

  <main class="container page-shell" style="max-width:840px;">
    <% if (messages && messages.error && messages.error.length) { %>
      <div class="alert alert-danger mb-3">
        <% messages.error.forEach(function(err){ %><div><%= err %></div><% }); %>
      </div>
    <% } %>
    <% if (messages && messages.success && messages.success.length) { %>
      <div class="alert alert-success mb-3">
        <% messages.success.forEach(function(msg){ %><div><%= msg %></div><% }); %>
      </div>
    <% } %>

    <div class="card shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center gap-3 mb-4">
          <% const avatarUrl = profile && profile.avatar ? ('/images/' + profile.avatar) : null; %>
          <% if (avatarUrl) { %>
            <img src="<%= avatarUrl %>" alt="Avatar" class="rounded-circle border" style="width:96px;height:96px;object-fit:cover;">
          <% } else { %>
            <div class="rounded-circle d-flex align-items-center justify-content-center border" style="width:96px;height:96px;background:#0c1f46;color:white;font-weight:700;font-size:1.8rem;">
              <%= (profile && profile.username ? profile.username.charAt(0) : 'U').toUpperCase() %>
            </div>
          <% } %>
          <div>
            <div class="pill-tag mb-1"><%= profile && profile.role ? profile.role.toUpperCase() : 'USER' %></div>
            <h4 class="mb-1"><%= profile ? profile.username : '' %></h4>
            <div class="text-muted"><%= profile ? profile.email : '' %></div>
          </div>
        </div>

        <form action="/profile" method="POST" enctype="multipart/form-data" class="row g-3">
          <div class="col-md-6">
            <label class="form-label">Username</label>
            <input type="text" name="username" class="form-control" value="<%= profile ? profile.username : '' %>" required>
          </div>
          <div class="col-md-6">
            <label class="form-label">Email</label>
            <input type="email" name="email" class="form-control" value="<%= profile ? profile.email : '' %>" required>
          </div>
          <div class="col-md-6">
            <label class="form-label">Address</label>
            <input type="text" name="address" class="form-control" value="<%= profile && profile.address ? profile.address : '' %>">
          </div>
          <div class="col-md-6">
            <label class="form-label">Contact</label>
            <input type="text" name="contact" class="form-control" value="<%= profile && profile.contact ? profile.contact : '' %>">
          </div>
          <div class="col-md-6">
            <label class="form-label">New Password <span class="text-muted">(leave blank to keep current)</span></label>
            <input type="password" name="password" class="form-control" placeholder="••••••">
          </div>
          <div class="col-md-6">
            <label class="form-label">Profile picture (optional)</label>
            <input type="file" name="avatar" accept="image/*" class="form-control">
          </div>
          <div class="col-12 d-flex justify-content-between align-items-center mt-2">
            <a href="/shopping" class="btn btn-outline-secondary">Back to shopping</a>
            <button class="btn btn-primary" type="submit">Save changes</button>
          </div>
        </form>
      </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
