<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Purchase History</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('partials/navbar', { user: user }) %>

  <section class="sa-hero">
    <div class="container">
      <div class="eyebrow">Order status</div>
      <h1>Your purchase history.</h1>
      <p>Review every order in a refined supermarket view.</p>
    </div>
  </section>

  <main class="container page-shell">
    <h3>Purchase History</h3>
    <div class="d-flex gap-2 mb-3">
      <a class="btn btn-outline-primary btn-sm" href="/shopping">Back to shop</a>
      <a class="btn btn-outline-primary btn-sm" href="/cart">View cart</a>
    </div>

    <% if (messages && messages.error && messages.error.length) { %>
      <div class="alert alert-danger"><%= messages.error[0] %></div>
    <% } %>
    <% if (!orders || orders.length === 0) { %>
      <div class="alert alert-info">No purchases yet.</div>
    <% } else { %>
      <% orders.forEach(order => { %>
        <div class="card mb-3">
          <div class="card-header d-flex flex-wrap justify-content-between align-items-center gap-2">
            <div>Order #<%= order.id %></div>
            <div><small class="text-muted"><%= new Date(order.created_at).toLocaleString() %></small></div>
            <div class="fw-bold">Total: $<%= Number(order.total).toFixed(2) %></div>
          </div>
          <% const paypalTxn = (typeof paypalMap !== 'undefined' && paypalMap && paypalMap.get) ? paypalMap.get(String(order.id)) : null; %>
          <% const netsTxn = (typeof netsMap !== 'undefined' && netsMap && netsMap.get) ? netsMap.get(String(order.id)) : null; %>
          <% const walletTxn = (typeof walletMap !== 'undefined' && walletMap && walletMap.get) ? walletMap.get(String(order.id)) : null; %>
          <div class="card-body border-top py-2">
            <% if (paypalTxn) { %>
              <span class="badge bg-info text-dark me-2">PayPal</span>
              <span class="small text-muted">Payment: <%= paypalTxn.status %></span>
              <span class="small text-muted ms-2">Refund: <%= (paypalTxn.refund_status === 'refunded' || paypalTxn.refund_status === 'completed') ? 'Refunded' : (paypalTxn.refund_status === 'failed' ? 'Refund failed' : 'Not refunded') %></span>
            <% } else if (netsTxn) { %>
              <span class="badge bg-warning text-dark me-2">NETS QR</span>
              <span class="small text-muted">Payment: Success</span>
              <span class="small text-muted ms-2">Refund: <%= netsTxn.status === 'refunded_wallet' ? 'Wallet credited' : 'Not refunded' %></span>
            <% } else if (walletTxn) { %>
              <span class="badge bg-success me-2">Wallet</span>
              <span class="small text-muted">Payment: Completed</span>
              <span class="small text-muted ms-2">Refund: Not refunded</span>
            <% } else { %>
              <span class="small text-muted">Payment: Unknown</span>
            <% } %>
          </div>
          <div class="card-body p-0">
            <table class="table mb-0">
              <thead>
                <tr>
                  <th>Product</th>
                  <th style="width:100px">Qty</th>
                  <th style="width:140px">Base</th>
                  <th style="width:120px">Discount %</th>
                  <th style="width:140px">Unit (after)</th>
                  <th style="width:140px">Subtotal</th>
                </tr>
              </thead>
              <tbody>
                <% order.items.forEach(it => { %>
                  <tr>
                    <td><%= it.productName %></td>
                    <td><%= it.quantity %></td>
                    <td>$<%= Number(it.base_price).toFixed(2) %></td>
                    <td><%= Number(it.discount_rate).toFixed(2) %>%</td>
                    <td>$<%= Number(it.unit_price_after_discount).toFixed(2) %></td>
                    <td>$<%= Number(it.subtotal).toFixed(2) %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      <% }) %>
    <% } %>
  </main>
</body>
</html>
