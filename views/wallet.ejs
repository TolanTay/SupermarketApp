<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Wallet</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('partials/navbar', { user: user }) %>

  <section class="sa-hero">
    <div class="container">
      <div class="eyebrow">Wallet</div>
      <h1>Your balance and top-ups.</h1>
      <p>Use your wallet for quick payments, and top up with NETS or PayPal.</p>
    </div>
  </section>

  <main class="container page-shell">
    <% if (messages && messages.error && messages.error.length) { %>
      <div class="alert alert-danger"><%= messages.error[0] %></div>
    <% } %>
    <% if (messages && messages.success && messages.success.length) { %>
      <div class="alert alert-success"><%= messages.success[0] %></div>
    <% } %>

    <div class="row g-4">
      <div class="col-lg-4">
        <div class="panel">
          <div class="panel-header">
            <strong>Wallet balance</strong>
          </div>
          <div class="panel-body">
            <h2 class="mb-2">$<%= Number(balance || 0).toFixed(2) %></h2>
            <p class="text-muted mb-0">Available for checkout.</p>
            <% if (user && user.role === 'admin') { %>
              <hr />
              <form action="/wallet/topup/admin" method="POST" class="d-flex gap-2 align-items-center">
                <input type="number" name="amount" min="1" step="0.01" class="form-control form-control-sm" placeholder="Admin top-up">
                <button type="submit" class="btn btn-sm btn-outline-secondary">Admin top-up</button>
              </form>
              <div class="small text-muted mt-2">Test funds. No stock or analytics impact.</div>
            <% } %>
          </div>
        </div>
      </div>

      <div class="col-lg-8">
        <div class="panel light">
          <div class="panel-header">
            <strong>Top up</strong>
          </div>
          <div class="panel-body">
            <form id="nets-topup-form" method="POST" action="/wallet/topup/nets" class="mb-3">
              <label for="topupAmount" class="form-label">Amount (min $10)</label>
              <div class="d-flex flex-wrap gap-2 align-items-center">
                <input id="topupAmount" name="amount" type="number" min="10" step="0.01" class="form-control" style="max-width:200px;" required>
                <button type="submit" class="btn btn-primary">Top up with NETS QR</button>
              </div>
              <div class="payment-note mt-3">NETS refunds will be credited to your wallet.</div>
            </form>

            <div class="mb-2 small text-muted">Or top up with PayPal</div>
            <div id="paypal-topup-button-container"></div>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-4">
      <h4>Wallet activity</h4>
      <% if (!transactions || !transactions.length) { %>
        <div class="alert alert-info">No wallet activity yet.</div>
      <% } else { %>
        <div class="table-card">
          <table class="table mb-0">
            <thead>
              <tr>
                <th>Type</th>
                <th>Method</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Note</th>
                <th>Time</th>
              </tr>
            </thead>
            <tbody>
              <% transactions.forEach(tx => { %>
                <tr>
                  <td><%= tx.type %></td>
                  <td><%= tx.method %></td>
                  <td>$<%= Number(tx.amount).toFixed(2) %></td>
                  <td><%= tx.status %></td>
                  <td><%= tx.note || '-' %></td>
                  <td><%= new Date(tx.created_at).toLocaleString() %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </main>

  <script src="https://www.paypal.com/sdk/js?client-id=<%= process.env.PAYPAL_CLIENT_ID %>&currency=SGD&intent=capture&commit=true&disable-funding=card"></script>
  <script>
    (function () {
      const paypalContainer = document.getElementById('paypal-topup-button-container');
      const amountInput = document.getElementById('topupAmount');
      if (!paypalContainer || typeof paypal === 'undefined') return;

      paypal.Buttons({
        createOrder: function () {
          const amount = Number(amountInput.value);
          if (!amount || amount <= 0) {
            alert('Enter a top-up amount first.');
            return;
          }
          return fetch('/api/paypal/topup/create-order', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ amount })
          }).then((res) => res.json()).then((data) => data.id);
        },
        onApprove: function (data) {
          return fetch('/api/paypal/topup/capture-order', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ orderID: data.orderID })
          }).then((res) => res.json()).then((details) => {
            if (details && details.success) {
              window.location.reload();
            } else {
              alert('Top-up not completed.');
            }
          });
        }
      }).render('#paypal-topup-button-container');
    })();
  </script>
</body>
</html>
